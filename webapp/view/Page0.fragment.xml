<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form">
    <Page 
        id="p0" 
        title="Gestión empleados" 
        backgroundDesign="List"
        class="sapUiMediumMarginBeginEnd"
        enableScrolling="false"
        >

        <content>
            <f:SimpleForm >
                <f:content>
                    <VBox width="90%">
                        <Button text="Consulta por nº de Empleado" press="page0onNavPage1" width="100%"></Button>
                        <Button text="Lista Empleados" press="page0OnNavPage3" width="100%" ></Button>
                        <Button text="Crear Empleado" width="100%" ></Button>
                        <Button text="Actualizar Empleado" width="100%"></Button>
                        <Button text="Borrar Empleado" width="100%"></Button>
                    </VBox>
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
                <Bar>
                    <contentLeft>
                        <Button text="Salir" press="onPage0Salir" icon="sap-icon://system-exit" />
                    </contentLeft>
                </Bar>
            </footer>
    </Page>
</core:FragmentDefinition>